<nav>
    <div class="nav-wrapper">
        <a href="#!" class="brand-logo">Notes</a>
        <ul class="right">
            <li><a href="#" id="note-form-open"><i class="material-icons">add_circle</i></a></li>
        </ul>
    </div>
</nav>

<div id="notes-container" class="row">
    <% _forEach(notes, function (note) { %>
        <div class="col s12 m6 l4">
            <div class="card" data-id="<%= note.id %>" data-order="<%= note.order %>" data-pinned="<%= note.pinned %>">
                <div class="fixed-action-btn" data-direction="left" data-hover-enabled="false">
                    <a class="btn-flat">
                        <i class="large material-icons">more_vert</i>
                    </a>
                    <ul>
                        <li><a class="btn-floating green tooltipped pin" data-position="bottom" data-tooltip="Pin">
                            <i class="fas fa-thumbtack"></i>
                        </a></li>
                        <li><a class="btn-floating blue tooltipped edit" data-position="bottom" data-tooltip="Edit">
                            <i class="material-icons">edit</i>
                        </a></li>
                        <li><a class="btn-floating red tooltipped remove" data-position="bottom" data-tooltip="Remove">
                            <i class="material-icons">delete_forever</i>
                        </a></li>
                    </ul>
                </div>
                <div class="card-content">
                    <span class="card-title">
                        <% if (note.pinned) { %><i class="fas fa-thumbtack"></i> <% } %> <%= note.title %>
                    </span>
                    <p class="flow-text"><%- note.content %></p>
                </div>
            </div>
        </div>
    <% }); %>
</div>
